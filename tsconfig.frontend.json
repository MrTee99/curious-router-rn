{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es2015", "es2016", "esnext"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm/frontend",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "types": ["react", "react-native"]
  },
  "include": ["src/frontend/**/*.ts", "src/frontend/**/*.tsx", "src/frontend/**/*.d.ts"]
}
