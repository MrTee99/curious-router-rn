{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2015", "es2016", "esnext"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm/api",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "types": ["node"]
  },
  "include": ["src/api/**/*.ts", "src/api/**/*.d.ts"]
}
